root = true

[*]
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 120
indent_style = space

[*.cs]
dotnet_sort_system_directives_first = true
dotnet_separate_import_directive_groups = false
indent_size = 4

# CA1515: Consider making public types internal
dotnet_diagnostic.CA1515.severity = none

# CA1708: Identifiers should differ by more than case
dotnet_diagnostic.CA1708.severity = none

# CA1716: Identifiers should not match keywords
dotnet_diagnostic.CA1716.severity = none

# CA1848: Use the LoggerMessage delegates
dotnet_diagnostic.CA1848.severity = none

# CA1873: Avoid expensive argument evaluation when logging is disabled
dotnet_diagnostic.CA1873.severity = none

# CA2007: Do not directly await a Task
dotnet_diagnostic.CA2007.severity = none

# CA5394: Do not use insecure randomness
dotnet_diagnostic.CA5394.severity = none

# IDE0008: Use explicit type
csharp_style_var_elsewhere = true
csharp_style_var_for_built_in_types = true
csharp_style_var_when_type_is_apparent = true

# IDE0022: Use expression body for methods
csharp_style_expression_bodied_methods = true

# IDE0048: Add parentheses for clarity
dotnet_style_parentheses_in_arithmetic_binary_operators = never_if_unnecessary

# IDE0058: Expression value is never used
dotnet_diagnostic.IDE0058.severity = none

# IDE0160: Convert to block scoped namespace
csharp_style_namespace_declarations = file_scoped

# S2325: Methods and properties that don't access instance data should be static
dotnet_diagnostic.S2325.severity = none

# S6608: Prefer indexing instead of "Enumerable" methods on types implementing "IList"
dotnet_diagnostic.S6608.severity = none

[*.{csproj,props,targets,xml,config,slnx}]
csharpier_formatter = xml
indent_size = 2

[*.{xaml,axaml}]
csharpier_formatter = xml
indent_size = 4

[*.{json,yml}]
indent_size = 2
